{
  "name": "vuethers",
  "version": "1.2.1",
  "private": false,
  "description": "A DApp frontend framework for Vue3 built with ethers.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LilaRest/vuethers.git"
  },
  "author": {
    "name": "LilaRest",
    "email": "mail@lila.cr"
  },
  "bugs": "https://github.com/LilaRest/vuethers/issues",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/vuethers.umd.js",
  "module": "./dist/vuethers.es.js",
  "unpkg": "./dist/vuethers.min.js",
  "jsdelivr": "./dist/vuethers.min.js",
  "exports": {
    ".": {
      "require": "./dist/vuethers.umd.js",
      "import": "./dist/vuethers.es.js"
    },
    "./package.json": "./package.json"
  },
  "keywords": [
    "dapp",
    "frontend",
    "vue",
    "vue3",
    "vuejs",
    "vuejs",
    "web3",
    "ethersjs",
    "ethers",
    "unstyled-components",
    "ethereum"
  ],
  "scripts": {
    "dev": "npx vite",
    "build": "npx vite build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "ethers": "^5.7.0",
    "vue": "^3.2.37"
  },
  "peerDependencies": {
    "@coinbase/wallet-sdk": "^3.5.1",
    "@walletconnect/web3-provider": "^1.8.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@openzeppelin/contracts": "^4.7.3",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@vitejs/plugin-vue": "^3.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "hardhat": "^2.10.1",
    "hardhat-deploy": "^0.11.12",
    "semantic-release": "^19.0.5",
    "vite": "^3.0.4",
    "vitepress": "^1.0.0-alpha.10",
    "vuethers": "^0.27.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
